{
  "name": "@graphistry/client-api",
  "version": "3.7.6",
  "description": "Client-side API for interacting with a Graphistry embedded visualization.",
  "jsnext:main": "dist/index.js",
  "config": {
    "port": 8000,
    "entry": {
      "GraphistryJS": [
        "./src/index.js"
      ]
    },
    "default": "./dist/index.full.esm.min.js"
  },

  "main": "dist/index.cjs.full.min.js",
  "module": "dist/index.esm.full.min.js",
  "source": "src/index.js",
  "files": [
    "dist",
    "docs",
    "jsdocs",
    "src",
    "README.md"
  ],

  "scripts": {
    "build": "npm run build:js && npm run build:js:full && npm run build:docs",

    "build:js": "npm run build:js-core && npm run build:js-aliases",
    "build:js-core": "npm run build:cjs && npm run build:esm && npm run build:iife",
    "build:js-aliases": "cp dist/index.esm.min.js dist/index.min.mjs && cp dist/client-api.cjs.min.js dist/GraphistryJS.min.js",
    "build:cjs":  "esbuild --bundle src/index.js      --minify --sourcemap --target=es6 --external:rxjs --format=cjs  --outfile=dist/client-api.cjs.min.js",
    "build:esm":  "esbuild --bundle src/index.js      --minify --sourcemap --target=es6 --external:rxjs --format=esm  --outfile=dist/index.esm.min.js",
    "build:iife": "esbuild --bundle src/index.js      --minify --sourcemap --target=es6 --external:rxjs --format=iife --outfile=dist/index.iife.min.js --global-name=graphistryJS",

    "build:js:full": "npm run build:js-core:full && npm run build:js-aliases:full",
    "build:js-core:full": "npm run build:cjs:full && npm run build:esm:full && npm run build:iife:full",
    "build:js-aliases:full": "cp dist/index.full.esm.min.js dist/index.full.min.mjs && cp dist/client-api.full.cjs.min.js dist/GraphistryJS.full.min.js",
    "build:cjs:full":  "esbuild --bundle src/index.js --minify --sourcemap --target=es6 --format=cjs  --outfile=dist/client-api.full.cjs.min.js",
    "build:esm:full":  "esbuild --bundle src/index.js --minify --sourcemap --target=es6 --format=esm  --outfile=dist/index.full.esm.min.js",
    "build:iife:full": "esbuild --bundle src/index.js --minify --sourcemap --target=es6 --format=iife --outfile=dist/index.full.iife.min.js --global-name=graphistryJS",

    "build:docs": "rimraf docs && mkdir -p docs && jsdoc -c jsdoc-conf.json -R ./README.md -d docs",
    "lock:fix": "npm i --package-lock-only",
    "prebuild:docs": "rimraf docs",
    "lint": "eslint src",
    "clean": "npm run clean:install && npm run clean:build && npm run clean:docs",
    "clean:install": "rimraf node_modules",
    "clean:build": "rimraf dist es libs",
    "clean:docs": "rimraf docs jsdocs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graphistry/graphistry-js.git"
  },
  "keywords": [
    "graphistry",
    "graph-viz"
  ],
  "author": "Graphistry, Inc <https://graphistry.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/graphistry/graphistry-js/issues"
  },
  "homepage": "https://github.com/graphistry/graphistry-js/projects/client-api#readme",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "7.16.0",
    "esbuild": "0.13.12",
    "eslint": "7.32.0",
    "jsdoc": "3.6.7",
    "jsdoc-babel": "~0.5.0",
    "clean-jsdoc-theme": "3.2.10",
    "rimraf": "3.0.2",
    "shallowequal": "1.1.0"
  },
  "dependencies": {
    "@graphistry/falcor-json-graph": "^2.9.10",
    "@graphistry/falcor-model-rxjs": "2.9.11",
    "@graphistry/falcor-socket-datasource": "2.9.11"
  },
  "peerDependencies": {
    "rxjs": ">=7.2.0"
  }
}
