{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "incremental": true,
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"],
}