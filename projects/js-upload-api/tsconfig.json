{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "incremental": true,
        "target": "es5",
        "lib": [ "es2017" ],
        "module": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "inlineSourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "declarationMap": true,
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"],
}